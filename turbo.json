{
   "$schema": "https://turbo.build/schema.json",
   "globalDependencies": [
      "**/.env.*local"
   ],
   "tasks": {
      "build": {
         "dependsOn": [
            "^build"
         ],
         "outputs": [
            "dist/**"
         ]
      },
      "check": {
         "dependsOn": [
            "^build"
         ]
      },
      "watch": {
         "dependsOn": [
            "^build"
         ],
         "persistent": true,
         "cache": false
      }
   }
}