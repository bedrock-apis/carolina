{
   "scripts": {
      "dump": "pnpm run build && node ./packages/dumper/dist/main.js",
      "init": "pnpm install && pnpm run build",
      "build": "rolldown -c .\\rolldown.config.ts",
      "watch": "rolldown -c .\\rolldown.dev.config.ts -w",
      "app": "bun --enable-source-maps ./app/dist/main.js",
      "check": "turbo check -- --pretty",
      "test": "vitest --run",
      "bench": "vitest bench --run",
      "lint": "oxlint",
      "format:ts": "prettier --write \"**/*.ts\"",
      "format:ts:check": "prettier --check \"**/*.ts\""
   },
   "workspaces": [
      "production/*",
      "packages/*",
      "app",
      "benchmarks"
   ],
   "prettier": {
      "arrowParens": "avoid",
      "endOfLine": "lf",
      "printWidth": 120,
      "quoteProps": "consistent",
      "singleQuote": true,
      "tabWidth": 3
   },
   "private": true,
   "author": "bedrock-apis",
   "license": "MIT",
   "type": "module",
   "devDependencies": {
      "@types/bun": "^1.3.2",
      "@types/node": "^24.10.1",
      "@typescript/native-preview": "7.0.0-dev.20250816.1",
      "nx": "^22.0.4",
      "oxlint": "^1.29.0",
      "prettier": "^3.6.2",
      "rolldown": "1.0.0-beta.51",
      "rolldown-plugin-dts": "^0.17.8",
      "typescript": "5.9.3",
      "vitest": "^4.0.10"
   }
}