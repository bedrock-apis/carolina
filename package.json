{
   "scripts": {
      "init": "pnpm install && pnpm run build",
      "build": "turbo run build",
      "watch": "turbo run watch",
      "app": "pnpm run build && bun --enable-source-maps ./app/dist/main.js",
      "check": "turbo check -- --pretty",
      "test": "vitest --run",
      "bench": "vitest bench --run",
      "lint": "oxlint",
      "fmt": "oxfmt",
      "check:fmt": "oxfmt --check"
   },
   "workspaces": [
      "production/*",
      "packages/*",
      "app",
      "benchmarks"
   ],
   "prettier": {
      "arrowParens": "avoid",
      "endOfLine": "lf",
      "printWidth": 120,
      "quoteProps": "consistent",
      "singleQuote": true,
      "tabWidth": 3
   },
   "private": true,
   "author": "bedrock-apis",
   "license": "MIT",
   "type": "module",
   "devDependencies": {
      "@types/bun": "^1.3.2",
      "@types/node": "^24.10.1",
      "@typescript/native-preview": "7.0.0-dev.20250816.1",
      "nx": "^22.0.4",
      "oxfmt": "0.14.0",
      "oxlint": "^1.29.0",
      "rolldown": "1.0.0-beta.51",
      "rolldown-plugin-dts": "^0.18.0",
      "turbo": "^2.6.1",
      "typescript": "5.9.3",
      "vitest": "^4.0.10"
   },
   "packageManager": "pnpm@10.23.0"
}