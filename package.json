{
   "private": true,
   "author": "ConMaster2112",
   "license": "MIT",
   "type": "module",
   "packageManager": "pnpm@10.22.0",
   "devDependencies": {
      "@types/node": "^24.5.0",
      "@typescript/native-preview": "7.0.0-dev.20250816.1",
      "chokidar-cli": "^3.0.0",
      "oxlint": "^1.28.0",
      "prettier": "^3.6.2",
      "rolldown": "1.0.0-beta.50",
      "rolldown-plugin-dts": "^0.17.7",
      "turbo": "^2.5.6",
      "typescript": "6.0.0-dev.20250824",
      "vitest": "^4.0.9"
   },
   "prettier": {
      "arrowParens": "avoid",
      "endOfLine": "crlf",
      "printWidth": 120,
      "quoteProps": "consistent",
      "singleQuote": true,
      "tabWidth": 3
   },
   "devEngines": {
      "runtime": {
         "name": "bun",
         "version": "latest"
      }
   },
   "scripts": {
      "dump": "pnpm run build && node ./packages/dumper/dist/main.js",
      "init": "pnpm install && pnpm run build",
      "dev": "chokidar \"./packages/*/src/**/*.ts\" -c \"powershell -ExecutionPolicy bypass -File ./helper.ps1\" -d 450 -i \"./**/*.test.ts\"",
      "build": "rolldown -c .\\rolldown.config.ts",
      "watch": "rolldown -c .\\rolldown.config.ts -w",
      "app": "bun --enable-source-maps ./app/dist/main.js",
      "check": "turbo check -- --pretty",
      "test": "vitest --run",
      "lint": "oxlint"
   },
   "workspaces": [
      "packages/*",
      "app"
   ]
}