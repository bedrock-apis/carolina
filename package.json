{
   "private": true,
   "author": "ConMaster2112",
   "license": "MIT",
   "type": "module",
   "packageManager": "pnpm@10.14.0",
   "devDependencies": {
      "@typescript/native-preview": "7.0.0-dev.20250816.1",
      "chokidar-cli": "^3.0.0",
      "oxlint": "^1.11.2",
      "prettier": "^3.6.2",
      "rolldown": "1.0.0-beta.31-commit.832324a",
      "rolldown-plugin-dts": "^0.15.6",
      "turbo": "^2.5.6",
      "vitest": "^3.2.4"
   },
   "prettier": {
      "arrowParens": "avoid",
      "endOfLine": "crlf",
      "printWidth": 120,
      "quoteProps": "consistent",
      "singleQuote": true,
      "tabWidth": 3
   },
   "scripts": {
      "dev": "chokidar \"./packages/*/src/**/*.ts\" -c \"pnpm run internal:dev\" -d 450 -i \"./**/*.test.ts\"",
      "internal:dev": "cls && turbo run build && powershell sleep 0.1 && bun ./app/dist/main.js",
      "build": "turbo run build",
      "check": "turbo check -- --pretty",
      "test": "vitest --run",
      "lint": "oxlint"
   },
   "workspaces": [
      "packages/*",
      "app"
   ]
}